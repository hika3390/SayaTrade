// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Company {
  id     Int     @id @default(autoincrement())
  name   String
  pairs  Pair[]
  assets Asset[]

  @@map("companies")
}

model Asset {
  id          Int      @id @default(autoincrement())
  name        String   // 資産名（例：現金、株式、債券など）
  type        String   // 資産タイプ（cash, stock, bond, fund など）
  amount      Float    // 金額または数量
  unit        String   @default("円") // 単位（円、株、口など）
  description String?  // 説明・備考
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  companyId   Int
  company     Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@map("assets")
}

model Pair {
  id              Int       @id @default(autoincrement())
  name            String
  link            String?
  analysisRecord  String?
  buyShares       Int
  sellShares      Int
  buyPrice        Float
  sellPrice       Float
  buyStockCode    String?
  sellStockCode   String?
  currentBuyPrice Float?
  currentSellPrice Float?
  profitLoss      Float?
  buyProfitLoss   Float?
  sellProfitLoss  Float?
  entryDate       DateTime? // エントリー日
  updatedAt       DateTime?
  isSettled       Boolean   @default(false)
  settledAt       DateTime?
  companyId       Int
  company         Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@map("pairs")
}
